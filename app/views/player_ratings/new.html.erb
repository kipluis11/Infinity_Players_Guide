<% if params[:unit_id] %>
<h1>Add your rating for <%= @player_rating.unit %> - <%= @player_rating.faction.name %></h1>
<% else %>
<h1> Add a new Player Rating for a Unit </h1>
<% end %>

<%= form_for(@player_rating) do |pr|%>
  <div>
    <%= f.label :stars %>
    <%= f.number_field :stars, min:1, max:5 %>
  </div>
    <br>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <br>
  <div>
    <%= f.label :content %>
    <%= f.text_area :content, size: "40x15" %>
  </div>

  <br>
  <%= f.hidden_field :unit_id %>

  <%= f.submit %>

    
<% end %>